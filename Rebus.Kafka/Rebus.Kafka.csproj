<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>glazkovalex</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Rebus.Kafka</PackageId>
    <Description>Apache Kafka transport for Rebus.
Additionally, you need to install the package "librdkafka.redist -Version 1.0.0-RC7 or newer", and loading this unmanaged librdkafka if necessary through "Library.Load (pathToLibrd)".</Description>
    <PackageTags>messaging, rebus, queue, service, bus, Kafka, Confluent, librdkafka</PackageTags>
    <Company />
    <Version>0.1.4</Version>
    <PackageLicenseUrl>https://raw.githubusercontent.com/rebus-org/Rebus/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/glazkovalex/Rebus.Kafka</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/glazkovalex/Rebus.Kafka/master/Rebus.Kafka/image.png</PackageIconUrl>
    <AssemblyVersion>0.1.4.0</AssemblyVersion>
    <FileVersion>0.1.4.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Confluent.Kafka" Version="1.0.0-beta3" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="Rebus" Version="5.2.1" />
  </ItemGroup>

</Project>
